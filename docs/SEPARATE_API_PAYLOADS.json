{
  "comment": "SEPARATE API PAYLOADS FOR FACILITY RECORDS, ADDRESS CHANGES, AND JOB STATUS",
  "note": "These three entities are now managed via separate APIs after student creation",
  
  "1_facility_record": {
    "description": "Add facility/placement record for a student",
    "endpoint": "POST /api/students/{studentId}/facility-records",
    "method": "POST",
    "example_url": "POST /api/students/123/facility-records",
    "payload": {
      "facility_name": "Sydney General Hospital",
      "facility_type": "Hospital",
      "branch_site": "Main Campus",
      "facility_address": "789 Hospital Road, Sydney NSW 2000",
      "contact_person_name": "Dr. Sarah Smith",
      "contact_email": "sarah.smith@hospital.com",
      "contact_phone": "+61287654321",
      "supervisor_name": "John Supervisor",
      "distance_from_student_km": 15,
      "slot_id": "SLOT-2026-001",
      "course_type": "Clinical Placement",
      "shift_timing": "Morning 8AM-4PM",
      "start_date": "2026-02-15",
      "duration_hours": 120,
      "gender_requirement": "Any",
      "applied_on": "2026-01-17",
      "student_confirmed": true,
      "student_comments": "Looking forward to this placement",
      "document_type": "Application Form",
      "file_path": "/uploads/applications/app_123.pdf",
      "application_status": "applied"
    },
    "field_notes": {
      "facility_name": "Required - Name of the facility",
      "application_status": "Enum: applied, under_review, accepted, rejected, confirmed, completed",
      "start_date": "Format: YYYY-MM-DD",
      "applied_on": "Format: YYYY-MM-DD",
      "student_confirmed": "Boolean - true/false",
      "distance_from_student_km": "Integer - distance in kilometers"
    },
    "minimal_payload": {
      "facility_name": "Sydney General Hospital"
    }
  },

  "2_address_change_request": {
    "description": "Submit address change request for a student",
    "endpoint": "POST /api/students/{studentId}/address-change-requests",
    "method": "POST",
    "example_url": "POST /api/students/123/address-change-requests",
    "payload": {
      "current_address": "123 Main Street, Sydney NSW 2000",
      "new_address": "789 New Street, Sydney NSW 2001",
      "effective_date": "2026-03-01",
      "change_reason": "Moving closer to placement facility",
      "impact_acknowledged": true,
      "status": "pending",
      "reviewed_at": null,
      "reviewed_by": null,
      "review_comments": null
    },
    "field_notes": {
      "current_address": "Required - Current address of student",
      "new_address": "Required - New address to change to",
      "effective_date": "Required - Format: YYYY-MM-DD",
      "status": "Enum: pending, approved, rejected, implemented",
      "impact_acknowledged": "Boolean - Student acknowledges impact of address change",
      "reviewed_at": "Format: YYYY-MM-DD HH:MM:SS (set by admin)",
      "reviewed_by": "Set by admin when reviewing",
      "review_comments": "Admin comments on the request"
    },
    "minimal_payload": {
      "current_address": "123 Main Street, Sydney NSW 2000",
      "new_address": "789 New Street, Sydney NSW 2001",
      "effective_date": "2026-03-01"
    }
  },

  "3_job_status_update": {
    "description": "Add or update student's job/employment status",
    "endpoint": "POST /api/students/{studentId}/job-status-updates",
    "method": "POST",
    "example_url": "POST /api/students/123/job-status-updates",
    "payload": {
      "status": "employed",
      "last_updated_on": "2026-01-17",
      "employer_name": "Sydney Healthcare Services",
      "job_role": "Healthcare Assistant",
      "start_date": "2026-02-01",
      "employment_type": "Part-time",
      "offer_letter_path": "/uploads/offers/offer_123.pdf",
      "actively_applying": false,
      "expected_timeline": null,
      "searching_comments": null
    },
    "field_notes": {
      "status": "Required - Job status (e.g., employed, searching, interview_scheduled, offer_received, not_looking)",
      "last_updated_on": "Format: YYYY-MM-DD",
      "start_date": "Format: YYYY-MM-DD - Job start date",
      "employment_type": "e.g., Full-time, Part-time, Casual, Contract",
      "actively_applying": "Boolean - Is student actively applying for jobs",
      "expected_timeline": "Text - Expected timeline for job search",
      "searching_comments": "Comments about job search status"
    },
    "minimal_payload": {
      "status": "searching"
    },
    "example_scenarios": {
      "scenario_1_employed": {
        "status": "employed",
        "employer_name": "Sydney Healthcare Services",
        "job_role": "Healthcare Assistant",
        "start_date": "2026-02-01",
        "employment_type": "Part-time",
        "actively_applying": false
      },
      "scenario_2_searching": {
        "status": "searching",
        "actively_applying": true,
        "expected_timeline": "Within 2 months",
        "searching_comments": "Applying to healthcare facilities in Sydney area"
      },
      "scenario_3_interview": {
        "status": "interview_scheduled",
        "employer_name": "Melbourne Hospital",
        "job_role": "Nurse Assistant",
        "actively_applying": true,
        "searching_comments": "Interview scheduled for next week"
      },
      "scenario_4_offer": {
        "status": "offer_received",
        "employer_name": "Brisbane Medical Center",
        "job_role": "Clinical Assistant",
        "employment_type": "Full-time",
        "offer_letter_path": "/uploads/offers/offer_456.pdf",
        "actively_applying": false
      }
    }
  },

  "complete_workflow_example": {
    "description": "Complete workflow: Create student, then add related records",
    "step_1_create_student": {
      "endpoint": "POST /api/students",
      "payload": {
        "first_name": "John",
        "last_name": "Doe",
        "dob": "2000-01-15",
        "gender": "male",
        "nationality": "Australian",
        "student_type": "domestic",
        "status": "active",
        "email": "john.doe@example.com",
        "password": "SecurePassword123",
        "contact_details": {
          "primary_mobile": "+61412345678",
          "email": "john.doe@example.com",
          "emergency_contact": "+61498765432",
          "contact_type": "mobile",
          "is_primary": true
        },
        "addresses": [
          {
            "line1": "123 Main Street",
            "city": "Sydney",
            "state": "NSW",
            "country": "Australia",
            "postal_code": "2000",
            "address_type": "current",
            "is_primary": true
          }
        ],
        "eligibility_status": {
          "classes_completed": true,
          "fees_paid": true,
          "assignments_submitted": true,
          "documents_submitted": true,
          "trainer_consent": true,
          "overall_status": "eligible"
        },
        "student_lifestyle": {
          "currently_working": false,
          "has_dependents": false,
          "married": false,
          "driving_license": true,
          "own_vehicle": true,
          "fully_flexible": true
        },
        "placement_preferences": {
          "preferred_cities": "Sydney",
          "max_travel_distance_km": 30,
          "morning_only": true,
          "full_time": true,
          "urgency_level": "within_month"
        }
      },
      "response": {
        "success": true,
        "message": "Student created successfully",
        "data": {
          "student_id": 123,
          "first_name": "John",
          "last_name": "Doe"
        }
      }
    },
    "step_2_add_facility_record": {
      "endpoint": "POST /api/students/123/facility-records",
      "note": "Use the student_id from step 1 response",
      "payload": {
        "facility_name": "Sydney General Hospital",
        "facility_type": "Hospital",
        "facility_address": "789 Hospital Road, Sydney NSW 2000",
        "contact_person_name": "Dr. Sarah Smith",
        "contact_email": "sarah.smith@hospital.com",
        "contact_phone": "+61287654321",
        "shift_timing": "Morning 8AM-4PM",
        "start_date": "2026-02-15",
        "application_status": "applied"
      }
    },
    "step_3_add_address_change": {
      "endpoint": "POST /api/students/123/address-change-requests",
      "note": "Optional - only if student needs to change address",
      "payload": {
        "current_address": "123 Main Street, Sydney NSW 2000",
        "new_address": "789 New Street, Sydney NSW 2001",
        "effective_date": "2026-03-01",
        "change_reason": "Moving closer to placement facility",
        "impact_acknowledged": true,
        "status": "pending"
      }
    },
    "step_4_add_job_status": {
      "endpoint": "POST /api/students/123/job-status-updates",
      "note": "Track employment status",
      "payload": {
        "status": "searching",
        "actively_applying": true,
        "expected_timeline": "Within 2 months",
        "searching_comments": "Applying to healthcare facilities"
      }
    }
  }
}
