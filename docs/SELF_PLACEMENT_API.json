{
  "comment": "SELF PLACEMENT API - Complete Documentation",
  "description": "Separate API for students to add their own facility placements with multiple document support",
  
  "api_endpoint": "POST /api/students/{studentId}/self-placements",
  "database_table": "self_placements",
  
  "complete_payload_all_fields": {
    "facility_name": "Community Health Clinic",
    "facility_type": "Clinic",
    "facility_address": "88 Health Avenue, Adelaide SA 5000",
    "contact_person_name": "Dr. Michael Wong",
    "contact_email": "michael.wong@clinic.com",
    "contact_phone": "+61882345678",
    "supervisor_name": "Practice Manager Jane Smith",
    "supporting_documents_path": "/uploads/self-placement/supporting_docs_123.pdf",
    "offer_letter_path": "/uploads/self-placement/offer_letter_123.pdf",
    "registration_proof_path": "/uploads/self-placement/registration_proof_123.pdf",
    "student_comments": "I arranged this placement myself with the clinic. They have agreed to supervise my training.",
    "status": "pending"
  },
  
  "minimal_payload_required_only": {
    "facility_name": "Community Health Clinic"
  },
  
  "field_descriptions": {
    "facility_name": {
      "type": "string",
      "required": true,
      "description": "Name of the facility",
      "example": "Community Health Clinic"
    },
    "facility_type": {
      "type": "string",
      "required": false,
      "description": "Type of facility (dropdown: Hospital, Clinic, Aged Care, etc.)",
      "example": "Clinic"
    },
    "facility_address": {
      "type": "string",
      "required": false,
      "description": "Complete facility address",
      "example": "88 Health Avenue, Adelaide SA 5000"
    },
    "contact_person_name": {
      "type": "string",
      "required": false,
      "description": "Primary contact person at facility",
      "example": "Dr. Michael Wong"
    },
    "contact_email": {
      "type": "string",
      "required": false,
      "description": "Contact person email",
      "example": "michael.wong@clinic.com"
    },
    "contact_phone": {
      "type": "string",
      "required": false,
      "description": "Contact person phone number",
      "example": "+61882345678"
    },
    "supervisor_name": {
      "type": "string",
      "required": false,
      "description": "Supervisor name at facility",
      "example": "Practice Manager Jane Smith"
    },
    "supporting_documents_path": {
      "type": "string",
      "required": false,
      "description": "Path to supporting documents (general documents)",
      "example": "/uploads/self-placement/supporting_docs_123.pdf"
    },
    "offer_letter_path": {
      "type": "string",
      "required": false,
      "description": "Path to offer/acceptance letter from facility",
      "example": "/uploads/self-placement/offer_letter_123.pdf"
    },
    "registration_proof_path": {
      "type": "string",
      "required": false,
      "description": "Path to facility registration proof",
      "example": "/uploads/self-placement/registration_proof_123.pdf"
    },
    "student_comments": {
      "type": "string",
      "required": false,
      "description": "Student comments about the placement",
      "example": "I arranged this placement myself..."
    },
    "status": {
      "type": "string",
      "required": false,
      "enum": ["pending", "under_review", "approved", "rejected"],
      "default": "pending",
      "description": "Application status (set by student or admin)",
      "example": "pending"
    }
  },
  
  "example_scenarios": {
    "scenario_1_hospital_placement": {
      "description": "Student arranged placement at a hospital",
      "payload": {
        "facility_name": "Royal Adelaide Hospital",
        "facility_type": "Hospital",
        "facility_address": "Port Road, Adelaide SA 5000",
        "contact_person_name": "Dr. Sarah Chen",
        "contact_email": "sarah.chen@rah.sa.gov.au",
        "contact_phone": "+61870740000",
        "supervisor_name": "Nurse Manager Lisa Brown",
        "supporting_documents_path": "/uploads/self-placement/police_check.pdf",
        "offer_letter_path": "/uploads/self-placement/hospital_offer.pdf",
        "registration_proof_path": "/uploads/self-placement/hospital_registration.pdf",
        "student_comments": "I have completed all pre-placement requirements including police check and immunizations.",
        "status": "pending"
      }
    },
    "scenario_2_aged_care": {
      "description": "Student arranged placement at aged care facility",
      "payload": {
        "facility_name": "Sunshine Aged Care",
        "facility_type": "Aged Care",
        "facility_address": "123 Care Street, Brisbane QLD 4000",
        "contact_person_name": "Ms. Jennifer Brown",
        "contact_email": "jennifer@sunshinecare.com.au",
        "contact_phone": "+61738765432",
        "supervisor_name": "Care Manager Sarah Johnson",
        "supporting_documents_path": "/uploads/self-placement/working_with_children_check.pdf",
        "offer_letter_path": "/uploads/self-placement/aged_care_agreement.pdf",
        "registration_proof_path": "/uploads/self-placement/facility_license.pdf",
        "student_comments": "The facility has agreed to provide supervision for my aged care placement.",
        "status": "pending"
      }
    },
    "scenario_3_minimal": {
      "description": "Minimal submission - student will upload documents later",
      "payload": {
        "facility_name": "Local Medical Center",
        "facility_type": "Clinic",
        "contact_person_name": "Dr. John Smith",
        "contact_email": "john@medicalcenter.com",
        "student_comments": "I will upload the required documents shortly.",
        "status": "pending"
      }
    }
  },
  
  "workflow": {
    "step_1": "Student finds their own placement facility",
    "step_2": "Student fills in facility details and contact information",
    "step_3": "Student uploads three types of documents: supporting docs, offer letter, registration proof",
    "step_4": "Student submits via POST /api/students/{studentId}/self-placements",
    "step_5": "Status is set to 'pending' by default",
    "step_6": "Admin reviews the submission",
    "step_7": "Admin updates status to 'approved' or 'rejected'"
  },
  
  "status_flow": {
    "pending": "Initial status when student submits",
    "under_review": "Admin is reviewing the application",
    "approved": "Admin approved the self placement",
    "rejected": "Admin rejected the self placement"
  },
  
  "differences_from_facility_records": {
    "table": "Uses separate 'self_placements' table instead of 'facility_records'",
    "documents": "Supports 3 separate document fields instead of 1",
    "status": "Uses pending/approved workflow instead of applied/accepted",
    "purpose": "For student-arranged placements that need admin review",
    "fields": "Focused on facility info and documents, no slot/course details"
  },
  
  "admin_fields": {
    "note": "These fields are typically set by admin during review, not by student",
    "reviewed_at": "Timestamp when admin reviewed (datetime)",
    "reviewed_by": "Admin username who reviewed (string)",
    "review_comments": "Admin comments on the application (text)"
  }
}
