{
  "info": {
    "name": "User Management API",
    "description": "Complete User Management API with secure password encryption",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"loginID\": \"admin@example.com\",\n  \"password\": \"AdminPassword123!\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/login",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "3000",
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "description": "Authenticate user and receive JWT token"
          }
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Create New User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"loginID\": \"john.doe@example.com\",\n  \"password\": \"SecurePassword123!\",\n  \"userRole\": \"user\",\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/users",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "3000",
              "path": [
                "api",
                "users"
              ]
            },
            "description": "Create a new user with encrypted password"
          }
        },
        {
          "name": "List All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/users?limit=10&page=1&status=active",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "3000",
              "path": [
                "api",
                "users"
              ],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "status",
                  "value": "active"
                },
                {
                  "key": "keyword",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "userRole",
                  "value": "",
                  "disabled": true
                }
              ]
            },
            "description": "Retrieve paginated list of users with filtering"
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/users/1",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "3000",
              "path": [
                "api",
                "users",
                "1"
              ]
            },
            "description": "Get specific user information by ID"
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"loginID\": \"john.doe.updated@example.com\",\n  \"password\": \"NewSecurePassword123!\",\n  \"userRole\": \"admin\",\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/users/1",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "3000",
              "path": [
                "api",
                "users",
                "1"
              ]
            },
            "description": "Update user information including password"
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/users/1",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "3000",
              "path": [
                "api",
                "users",
                "1"
              ]
            },
            "description": "Soft delete user (mark as inactive)"
          }
        }
      ]
    },
